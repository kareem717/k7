package server

import (
	"github.com/gofiber/fiber/v2"
	"{{.Name}}/internal/storage"
)

type FiberServer struct {
	*fiber.App
	db database.Service
}

func New() *FiberServer {
	server := &FiberServer{
		App: fiber.New(fiber.Config{
		ServerHeader:            "{{.Name}}",
		AppName:                 "{{.Name}}",
	}),
		db:  database.New(),
	}

	return server
}
